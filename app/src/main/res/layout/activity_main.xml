<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editDistance"
            style="@style/mCustomEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_et"
            android:gravity="center"
            android:hint="@string/distancia"
            android:maxLength="5"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="Total de Quilômetros"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkGrey"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_et"
            android:gravity="center"
            android:hint="@string/preco"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorDarkGrey"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="Preço da Gasolina"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkGrey"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editAutonomy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_et"
            android:gravity="center"
            android:hint="@string/autonomia"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorDarkGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="Kms por Litro"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkGrey"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="Seu gasto total será de: "
            android:textAllCaps="true"
            android:textSize="10sp"

            />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="R$ 0,00"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15dp"
            android:background="@drawable/round_button"

            android:padding="20dp"
            android:text="@string/calcular"
            android:textAllCaps="true"
            android:textColor="@color/colorLightGrey"

            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>